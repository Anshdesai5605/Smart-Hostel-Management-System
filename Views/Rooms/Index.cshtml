@model IEnumerable<SmartHostelManagementSystem.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="mainTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OccupiedCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OccupiedCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
